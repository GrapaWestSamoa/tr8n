<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

  <%= render :partial => "/tr8n/common/header" %>
  
  <div class="section_title">
    <%= render :partial => "/tr8n/translator/sections" %>
    <%=tra("Your Notifications") %>
  </div>

  <div class="section grey" style="margin-top:10px; margin-bottom:10px; padding:10px;">
    <%= tr8n_paginator_tag(@stories, :subject => 'notification') if @stories.any? %>      

    <% @stories.each do |n| %>
      <% next unless n.valid_notification? %>
      <%= render :partial => "notification", :locals => {:notification => n} %>
    <% end %>

    <% if @stories.empty? %>
      <%=tr("You don't have any notifications yet.") %>
    <% end %>
  </div>

  <%= render :partial => "/tr8n/common/footer" %>

<% end %>  