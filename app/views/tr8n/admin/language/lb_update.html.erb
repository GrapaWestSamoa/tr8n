<%= tr8n_lightbox_header_tag %>
<div class="inner">
    <div class="hd">
        <%= tr8n_lightbox_title_tag(tra("Language Details")) %>
    </div>
    <div class="bd" style="padding-bottom:60px;">
        <%= form_for(@language, :as => :language, :url => {:action => :update}, :html => {:id => 'tr8n_form', :method => :post, :class => "tr8n"}) do |form| %>
        <%= form.hidden_field :id %>
        <%= hidden_field_tag(:origin, params[:origin]) %>
        <table class="admin_table">
            <tr>
                <th>
                    Locale:
                </th>
                <td>
                    <%= form.text_field :locale, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    English Name:
                </th>
                <td>
                    <%= form.text_field :english_name, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Native Name:
                </th>
                <td>
                    <%= form.text_field :native_name, :style=>"width:99%;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Right to Left:
                </th>
                <td>
                    <%= form.check_box :right_to_left, :style=>"width:20px;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Enabled:
                </th>
                <td>
                    <%= form.check_box :enabled, :style=>"width:20px;" %>
                </td>
            </tr>
            <tr>
                <th>
                    Featured Index:
                </th>
                <td>
                    <%= form.text_field :featured_index %>
                </td>
            </tr>
            <tr>
                <th>
                    Google Key:
                </th>
                <td>
                    <%= form.text_field :google_key %>
                </td>
            </tr>
            <tr>
                <th>
                    Facebook Key:
                </th>
                <td>
                    <%= form.text_field :facebook_key %>
                </td>
            </tr>
            <tr>
                <th>
                    MyHeritage Key:
                </th>
                <td>
                    <%= form.text_field :myheritage_key %>
                </td>
            </tr>
        </table>
        <div>
            <em>Note: providing google key/locale will enable google suggestions for that language.</em>
        </div>
        <% end %>
    </div>
    <div class="ft">
        <%= tr8n_lightbox_buttons_tag %>
    </div>
</div>

<%= tr8n_lightbox_footer_tag %>
